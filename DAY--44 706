#include <iostream>
using namespace std;

int main() {
    int T;
    cin >> T;
    
    while (T--) {
        int N, A, B;
        cin >> N >> A >> B;
        
       
        int count_odd = (N + 1) / 2;
        int count_even = N / 2;
        
     
        int total_duration = (count_odd * B) + (count_even * A);
        
      
        cout << total_duration << endl;
    }
    
    return 0;
}
